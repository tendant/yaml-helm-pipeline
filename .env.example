# GitHub Configuration
GITHUB_TOKEN=your_github_personal_access_token
REPO_OWNER=your_github_username_or_organization
REPO_NAME=your_repository_name

# Server Configuration
PORT=4000                # Default port changed from 8080 to 4000
HOST=0.0.0.0             # Network interface to bind to (0.0.0.0 for all interfaces, 127.0.0.1 for localhost only)

# Helm Configuration
# Comma-separated list of value files paths (relative to repository root or absolute)
# Example: values/values.yaml,values/secrets.yaml,/absolute/path/to/values.yaml
VALUE_FILES_PATHS=

# Output Configuration
# Target repository for generated YAML files

# Git URL of the target repository (if different from source)
OUTPUT_REPO_URL=
# Branch to use in the target repository
OUTPUT_REPO_BRANCH=main            
# Directory within the target repository to save files
OUTPUT_DIR=
# Filename for the generated YAML
OUTPUT_FILENAME=generated.yaml
